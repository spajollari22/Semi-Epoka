#include <stdio.h>
#include <math.h>

// Function to calculate the sum of two numbers
double add(double num1, double num2) {
    return num1 + num2;
}

// Function to calculate the difference between two numbers
double subtract(double num1, double num2) {
    return num1 - num2;
}

// Function to calculate the product of two numbers
double multiply(double num1, double num2) {
    return num1 * num2;
}

// Function to calculate the division of two numbers
double divide(double num1, double num2) {
    if (num2 == 0) {
        printf("Error: Division by zero\n");
        return 0;
    }
    return num1 / num2;
}

// Function to calculate the square root of a number
double square_root(double num) {
    if (num < 0) {
        printf("Error: Square root of a negative number\n");
        return 0;
    }
    return sqrt(num);
}

// Function to calculate the power of a number
double power(double num, int m) {
    return pow(num, m);
}

// Function to calculate the average of unspecified numbers
double average() {
    int count = 0;
    double num, sum = 0;

    printf("Enter numbers to calculate average (enter 'q' to quit):\n");
    while (scanf("%lf", &num) == 1) {
        count++;
        sum += num;
    }
    return sum / count;
}

int main() {
    double num1, num2, result;
    int choice;
    char operation;

    printf("Enter calculation method (a for average, c for calculator): ");
    scanf(" %c", &operation);

    if (operation == 'a') {
        result = average();
        printf("Average = %lf\n", result);
        return 0;
    }
    else if (operation == 'c') {
        printf("Enter two numbers: ");
        scanf("%lf %lf", &num1, &num2);

        printf("Select operation:\n");
        printf("1. Add\n");
        printf("2. Subtract\n");
        printf("3. Multiply\n");
        printf("4. Divide\n");
        printf("5. Square root\n");
        printf("6. Power\n");
        scanf("%d", &choice);

        switch(choice) {
            case 1:
                result = add(num1, num2);
                printf("Sum = %lf\n", result);
                break;
            case 2:
                result = subtract(num1, num2);
                printf("Difference = %lf\n", result);
                break;
            case 3:
                result = multiply(num1, num2);
                printf("Product = %lf\n", result);
                break;
            case 4:
                result = divide(num1, num2);
                printf("Quotient = %lf\n", result);
                break;
            case 5:
                result = square_root(num1);
                printf("Square root of %lf = %lf\n", num1, result);
                break;
            case 6:
                result = power(num1, (int)num2);
                printf("%lf raised to the power of %d = %lf\n", num1, (int)num2, result);
                break;
            default:
                printf("Invalid choice\n");
        }
        return 0;
    }
    else {
        printf("Invalid calculation method\n");
